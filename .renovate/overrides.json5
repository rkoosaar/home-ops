{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Override Helmfile Dependency Name",
      matchDatasources: ["docker"],
      matchManagers: ["helmfile"],
      overrideDepName: "{{packageName}}",
    },
    {
      description: "Override Talos Installer Package Name",
      matchDatasources: ["docker"],
      matchPackageNames: ["/factory\\.talos\\.dev/"],
      overridePackageName: "ghcr.io/siderolabs/installer",
    },
    {
      description: "FireflyIII (core + data-importer): stable-only version-x.y.z; update tag (+ digest)",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["^(?:docker\\.io/)?fireflyiii/(core|data-importer)$"],

      // Only look at tags that literally start with 'version-' and are x.y.z
      allowedTags: "^version-\\d+\\.\\d+\\.\\d+$",

      // Convert 'version-6.2.10' -> '6.2.10' so semver comparison works
      extractVersion: "^version-(?<version>\\d+\\.\\d+\\.\\d+)$",
      versioning: "semver",

      // Keep digest pinning (Renovate will refresh it on tag bumps)
      pinDigests: false
    },
  ],
}
